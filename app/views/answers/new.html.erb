<h1 id="students-wall"> Reply your classmate/teacher</h1>

<hr>

<%= form_for :answer, url: answers_path do |f| %>

  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
 
  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>

<ul class="pager">
  <li><a href="/answers">Back</a></li>
</ul>
