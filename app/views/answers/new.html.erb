<h2 class="text-center"> Reply your classmate/teacher</h2><br>

<div class="text-center">

<%= form_for :answer, url: answers_path do |f| %>

  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
 
  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>

</div>

<ul class="pager">
  <li><a href="/answers">Back</a></li>
</ul>
