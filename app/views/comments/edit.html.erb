<table class="table">
  <tr>
    <td>
      <%= form_for :comment, url: comment_path(@comment), method: :patch do |f| %>
        <p>
          <%= f.label :title %><br>
          <%= f.text_field :title %>
        </p>

        <p>
          <%= f.label :name %><br>
          <%= f.text_field :name %>
        </p>

        <p>
          <%= f.label :text %><br>
          <%= f.text_area :text %>
        </p>

        <p>
          <%= f.submit %>
        </p>
      <% end %>
      </td>
  </tr>
</table>

<hr>

<%= link_to 'Back', comments_path%>