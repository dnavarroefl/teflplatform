<h3 class="recent-posts-header"><img id="messages-logo" src="/images/messages.png" height="46" width="46"> Recent Posts </h3>

<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div id="posts-content">
        <table> 
          
                 <% @posts.each do |post| %> 

                  <th><h4 id="post-title"><%= post.title %><h4></th>
                <tr>
                  <td>By: <b><%= post.name %></b></td>
                </tr>
                <tr>  
                  <td>Posted on: <%= post.created_at.mday %>/<%= post.created_at.month %>/<%= post.created_at.year %>
                  </td>
                </tr>
                <tr>
                   <td><%= post.text %></td>
                </tr>  
                <tr>
                  <td><a href="/answers/new"><input type="button" value="Reply" id="reply-button"></a>
                  <button type='button' id='like-button'> Like </button>
                                            <td id="likes">
                                            </td>
                </tr>
                     <% end %>
            </table>
            <div id="pager-edit">
                      <ul class="pager">
                            <li><a href="/posts">All posts</a></li> 
                       </ul>
            </div>
         </div>
        </div>
      </div>
</div>



<div class="fb-comments" data-href="http://localhost:3000/home" data-numposts="5"></div>

