		<h1><b> TEFL Platform for teachers and students </b></h1>

		<div id="motto"><p> Educative platform fostering English learning. </p>
		</div>

	<hr>
	<h3 id="welcome">Welcome back!</h3>

<article>
	<div id="home-header">
	<h3 id="latest_posts"> Latest posts </h3>
	</div>

<div id="latest_posts">
												<table>
													<tbody>
													<% @posts.each do |post| %> 
															<tr>
														    <td><b><%= post.name %></b> / <%= Time.now %></td><br>
														  </tr>
														  <tr>
																<td><%= post.text %></td>
																<td><button type='button' id='like-button'> Like </button></td>
			                                    <td id="likes"></td><br>
															</tr>	
														</tbody>	
																<% end %>
												</table>
										</div>
											   <table id="post-comments-home">
										
														<h4 id="welcome"> Share a comment </h4>
										
														  <tr>
														    <td>
														      <%= form_for :comment, url: comments_path(@comment), method: :patch do |f| %>
														        <p>
														          <%= f.label :title %><br>
														          <%= f.text_field :title %>
														        </p>

														        <p>
														          <%= f.label :name %><br>
														          <%= f.text_field :name %>
														        </p>

														        <p>
														          <%= f.label :text %><br>
														          <%= f.text_area :text %>
														        </p>

														        <p>
														          <%= f.submit %>
														        </p>
														      <% end %>
														      </td>
														  </tr>
														</table>

														<tr>
															<td>
											
												</td>
														</tr>
											</table><br>
