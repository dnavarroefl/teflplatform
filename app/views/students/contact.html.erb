<h2> Contact your tutor: </h2>

<img id= "contact" src="http://icons.iconarchive.com/icons/martz90/hex/256/email-2-icon.png" height="46" width="46">

<% @tutors.each do |tutor| %>
<p>
	<table>
		<td><%= tutor.name %></td>
		<td>Email: <%= tutor.email %></td>
	</table>
<% end %>

<%= form_for :comment, url: comments_path do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
 
  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Home', root_path %>
