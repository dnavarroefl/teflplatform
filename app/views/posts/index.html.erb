<!DOCTYPE html>
<html>
<head>
</head>

<body>

      <span id="recent-posts-header">
       <h3 id="post-title"> <img id="posts" src="http://icons.iconarchive.com/icons/martz90/hex/256/wordpress-icon.png" height="36" width="36"> Recent Posts </h3>
      </span>

      <hr>

<div class="container">
  <div class="row">
    <div class="col-md-6">
      <table> 
        <div id="posts-content">
        	 <% @posts.each do |post| %> 
        	<tr>
            <td><b><%= post.name %></b></td>
          </tr>
          <tr>
            <td><%= post.title %></td>
          </tr>
          <tr>
        		<td><%= post.text %></td>
          </tr>
             <tr>
             <td>Posted on <%= post.created_at %></td>
          </tr>
          <tr>  
            <td><button type='button' id='like-button'> Like </button></td>
                                      <td id="likes"></td>
        	</tr>

        	<% end %>
        </div>
      </div>
</div>

<div class="row">
  <div class="col-md-6">
        <table id="post-comments">
        <tr>
          <%= form_for :post, url: posts_path do |f| %>

            <th> Post your ideas!</th> 
            
            <tr>
              <td>
                 <p>
                    <%= f.label :title %><br>
                    <%= f.text_field :title %>
                  </p>

                  <p>
                    <%= f.label :name %><br>
                    <%= f.text_field :name %>
                  </p>
                 
                  <p>
                    <%= f.label :text %><br>
                    <%= f.text_area :text %>
                  </p>
                 
                  <p>
                    <%= f.submit %>
                  </p>
              </td>
            </tr>
              <table>
          </div>
          </div>
          <% end %>
        </div>
       </div> 
      </div>
  </div>
</div>

    <script type="text/javascript">

        $('button#like-button').on('click', function() {
          alert('Thanks for your support!');
        });
    </script>
</body>
</html>

