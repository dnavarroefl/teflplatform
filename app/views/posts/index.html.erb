<span id="recent-posts-header">
  <img id="posts" src="http://icons.iconarchive.com/icons/martz90/hex/256/wordpress-icon.png" height="36" width="36"><h3 id="post-title"> Recent Posts </h3>
</span>

<hr>
<div id="home-link">
<%= link_to 'Home', root_path %>
</div>
<hr>

<div id="posts-titles">
<table> 
	<tr>
    <th>Name</th>
		<th>Title</th>
		<th>Text</th>
	</tr>
</div>

<div id="posts-content">
	<% @posts.each do |post| %> 
	<tr>
    <td><%= post.name %></td>
		<td><%= post.title %></td>
		<td><%= post.text %></td>
	</tr>

	<% end %>
</table><br>
</div>

  <%= form_for :post, url: posts_path do |f| %>

  <table>

    <th> Post your ideas!:</th> 
    
    <tr>
      <td>
         <p>
            <%= f.label :title %><br>
            <%= f.text_field :title %>
          </p>

          <p>
            <%= f.label :name %><br>
            <%= f.text_field :name %>
          </p>
         
          <p>
            <%= f.label :text %><br>
            <%= f.text_area :text %>
          </p>
         
          <p>
            <%= f.submit %>
          </p>
      </td>
    </tr>
<% end %>
  </table>

